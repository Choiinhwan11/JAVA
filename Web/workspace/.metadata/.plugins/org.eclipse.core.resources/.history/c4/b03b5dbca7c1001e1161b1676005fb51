function checkWrite(){
	document.getElementById("nameDiv").value = "";
	document.getElementById("idDiv").value = "";
	document.getElementById("pwdDiv").value = "";
	
	if(document.getElementById("id").value == ""){
		document.getElementById("idDiv").innerHTML = "아이디를 입력하세요";
		alert("아이디를 입력하세요.,")
	}else if(document.getElementById("pwd").value == ""){
		document.getElementById("pwdDiv").innerHTML = "비밀번호를 입력하세요.";
	}else{
		document.getElementById("writeForm").submit();
	}
	return false;
	
}